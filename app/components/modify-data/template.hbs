<h1>Modify</h1>
<h2>Pets</h2>
{{#each pets as |pet|}}
    <div>{{pet.name}}</div>
    <PowerSelect
        @options={{bodyShapes}}
        @onChange={{action "selection" pet}}
        @selected={{pet.shape}}
        as |shape|>
        {{shape.name}}
    </PowerSelect>
{{/each}}

<h2>People</h2>
{{#each people as |person|}}
    <div>
        {{person.name}} <br/>
        <Input @value={{person.name}} />
    </div>
{{/each}}
{{yield}}